{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "FrontendProxies": {
    "Routes": {
      "gateway": {
        "ClusterId": "gateway",
        "Match": {
          "Path": "/graphql/{**catch-all}"
        },
        "Transforms": [
          {
            "ResponseHeader": "Source",
            "Append": "YARP",
            "When": "Success"
          }
        ]
      },
      "geocoding": {
        "ClusterId": "geocoding",
        "Match": {
          "Path": "/geocoding/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/geocoding"
          }
        ]
      },
      "routing": {
        "ClusterId": "routing",
        "Match": {
          "Path": "/routing/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/routing"
          }
        ]
      }
    },
    "Clusters": {
      "gateway": {
        "Destinations": {
          "gateway": {
            "Address": "http://gateway/",
            "Health": "http://gateway/readiness"
          }
        }
      },
      "geocoding": {
        "Destinations": {
          "geocoding": {
            "Address": "https://nominatim.openstreetmap.org/"
          }
        }
      },
      "routing": {
        "Destinations": {
          "routing": {
            "Address": "https://valhalla.openstreetmap.de/"
          }
        }
      }
    }
  }
}
